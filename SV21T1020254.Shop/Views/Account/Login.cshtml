@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bình Store</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css" />

    <link rel="stylesheet" href="/css/login.css">
</head>

<body style="display:flex; align-items:center; justify-content:center;">
    <div class="login-page">
        <div class="form">
            <form action="~/Account/Login" class="login-form" method="post">
                @Html.AntiForgeryToken()
                <h2>Login</h2>
                <div>
                    <input type="text"  placeholder="Email" name="username" value="@ViewBag.UserName" autofocus required />
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
               <div>
                    <input type="password"  placeholder="Password" name="password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
               </div>
               
                    <div class="col-xs-8">
                        @Html.ValidationMessage("Error", new { @style = "color:red;" })
                    </div>


                <button class="btn" type="submit">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    Sign in
                </button>

                <p class="message">Not registered? <a href="/Account/Register">Create an account</a></p>
            </form>
           
        </div>
       
    </div>
    <div class="text-left">
        <a href="~/" class="btn"><i class="fa-solid fa-arrow-rotate-left me-1"></i> Quay lại</a>
   </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
   
</body>
</html>

