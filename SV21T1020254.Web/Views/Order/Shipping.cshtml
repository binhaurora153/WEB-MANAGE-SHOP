@model _21T1020254.DomainModels.Order

@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form id="shippingForm" action="~/Order/Shipping/@Model.OrderID?ProductId=@Model.ShipperID" method="post">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chuyển giao hàng cho đơn hàng</h4>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label class="control-label">Người giao hàng:</label>
                    <select id="shipperSelect" class="form-control" name="shipperID">
                        <option value="0">-- Chọn người giao hàng ---</option>
                        @foreach (var shipper in _21T1020254.BusinessLayers.CommonDataService.ListOfShippers())
                        {
                            <option value="@shipper.ShipperID">@shipper.ShipperName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="validateForm()">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function validateForm() {
        var shipperSelect = document.getElementById("shipperSelect");
        if (shipperSelect.value === "0") {
            alert("Vui lòng chọn người giao hàng.");
        } else {
            document.getElementById("shippingForm").submit();
        }
    }
</script>

