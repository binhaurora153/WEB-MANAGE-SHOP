@model Employee
@{
    ViewBag.Title = "Xóa nhân viên";
}
<div class="box box-danger">
    <div class="box-body">

        <form class="form-horizontal" action="~/Employee/Delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.FullName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.BirthDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Address</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Phone</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Email</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Trạng thái:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@(Model.IsWorking == true ? "Nhân viên đang làm việc" : "Nhân viên nghỉ việc")</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/employees/@(string.IsNullOrWhiteSpace(Model.Photo) ? "no-img.jpg" : Model.Photo)" class="img img-bordered" style="width:200px">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @if (!_21T1020254.BusinessLayers.CommonDataService.InUsedEmployee(Model.EmployeeID))
                    {
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Xóa dữ liệu
                        </button>
                    }

                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

