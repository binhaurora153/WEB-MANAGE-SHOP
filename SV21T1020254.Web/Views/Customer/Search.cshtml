@model SV21T1020254.Web.Models.CustomerSearchResult
@{
    Layout = null;
}
<!-- Hiển thị kết quả tìm kiếm -->
<p style="margin: 10px 0;"> Có <b>@Model.RowCount</b> khách hàng trong tổng số <b>@Model.PageCount</b> trang</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th class="text-center">Tên khách hàng</th>
                <th class="text-center">Tên giao dịch</th>
                <th class="text-center">Điện thoại</th>
                <th class="text-center">Email</th>
                <th class="text-center">Địa chỉ</th>
                <th class="text-center">Tỉnh thành</th>
                <th class="text-center">Bị khóa?</th>
                <th class="text-center" style="width: 80px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CustomerName</td>
                    <td>@item.ContactName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Province</td>
                    <td class="text-center">
                        @(item.IsLocked ? "x" : "")
                    </td>
                    <td class="text-center">
                        <a href="~/Customer/Edit/@item.CustomerID" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Customer/Delete/@item.CustomerID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <div class="text-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (p == Model.Page)
                    {
                        <li class="active"><a class="page-link" href="#">@p</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="javascript::" onclick="doSearch(@p)">@p</a></li>
                    }
                }

            </ul>
        </nav>
    </div>
</div>