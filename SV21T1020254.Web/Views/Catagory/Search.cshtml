@model SV21T1020254.Web.Models.CategorySearchResult
@{
    Layout = null;
}

<!-- Hiển thị kết quả tìm kiếm -->
<p style="margin: 10px 0;"> Có <b>@Model.RowCount</b> loại hàng trong tổng số <b>@Model.PageCount</b> trang</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th class="text-center">Tên loại hàng</th>
                <th class="text-center">Miêu tả</th>

                <th class="text-center" style="width: 150px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>

                    <td class="text-center">
                        <a href="~/Catagory/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Catagory/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <div class="text-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (p == Model.Page)
                    {
                        <li class="active"><a class="page-link" href="#">@p</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="javascript::" onclick="doSearch(@p)">@p</a></li>
                    }
                }
            </ul>
        </nav>
    </div>
</div>