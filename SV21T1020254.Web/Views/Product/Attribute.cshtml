@model ProductAttribute
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" action="~/Product/SaveAttribute">

            <input type="hidden" name="@nameof(Model.ProductID)" value="@Model.ProductID" />
            <input type="hidden" name="@nameof(Model.AttributeID)" value="@Model.AttributeID" />

            <div class="form-group">
                <label class="col-form-label text-right col-sm-2">Tên thuộc tính:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           name="@nameof(Model.AttributeName)"
                           value="@Model.AttributeName"
                           autofocus />
                    @Html.ValidationMessage(nameof(Model.AttributeName))
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá trị:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           name="@nameof(Model.AttributeValue)"
                           value="@Model.AttributeValue" />
                    @Html.ValidationMessage(nameof(Model.AttributeValue))
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    <input type="number"
                           class="form-control"
                           name="@nameof(Model.DisplayOrder)"
                           value="@Model.DisplayOrder"
                           min="1" />
                    @Html.ValidationMessage(nameof(Model.DisplayOrder))
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i>
                        <span>Lưu dữ liệu</span>
                    </button>
                    <a href="~/Product/Edit/@Model.ProductID" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>