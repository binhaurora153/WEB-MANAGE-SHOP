<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal"  action="~/Product/Delete/@Model.ProductID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.ProductName</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.ProductDescription</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Unit</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static form-control">@Model.Price</p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                   @*  <img id="Photo"
                         src="@(string.IsNullOrWhiteSpace(Model.Photo)
                         ? "/shared-products/no-pic.jfif"
                         : $"/shared-products/{Model.Photo}")"
                         class="img img-bordered"
                         style="width:200px" /> *@
                    <img id="Photo" src="~/images/@(string.IsNullOrWhiteSpace(Model.Photo) ? "products/no-image.jpg" : $"products/{Model.Photo}")" class="img img-bordered" style="width:200px" /> 
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @if (!ProductDataService.InUsedProduct(Model.ProductID))
                    {
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-trash"></i>
                                <span>Xác nhận xóa</span>
                            </button>
                    }
                    <a class="btn btn-default" href="~/Product">
                        Quay lại
                    </a>
                </div>
